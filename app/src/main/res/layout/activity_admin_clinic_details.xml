<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/main"
    tools:context=".admin.AdminClinicDetails">

    <!-- Clinic Details Section -->

    <TextView
        android:id="@+id/clinicName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingBottom="8dp"
        android:text="Clinic Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clinicAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clinic Address"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/clinicName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/clinicCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/clinicAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/clinicZipcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zipcode"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/clinicCity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/clinicContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/clinicZipcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Doctor Details Section -->

    <TextView
        android:id="@+id/doctorTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:paddingBottom="8dp"
        android:text="Doctor Details"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clinicContact" />

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Doctor Name"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/doctorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/doctorSpecialization"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Specialization"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/doctorName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/doctorEducation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Education"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/doctorSpecialization"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/doctorCertifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Certifications"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/doctorEducation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/doctorBio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/doctorCertifications"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
