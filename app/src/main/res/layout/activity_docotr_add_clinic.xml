<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/bgimage"
    android:layout_height="match_parent"
    tools:context=".doctor.activities.ActivityDocotr_AddClinic">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Clinic Details"
        android:textSize="36sp"
        android:layout_marginTop="90dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:orientation="vertical"
                android:background="@drawable/custom_edittext">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Clinic Details"/>


                <EditText
                    android:id="@+id/addClinic_clinicName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/outline_clinic_24"
                    android:drawablePadding="8dp"
                    android:hint="Clinic Name"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/addClinic_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/sharp_city_24"
                    android:drawablePadding="8dp"
                    android:inputType="text"
                    android:hint="Street Address"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/addClinic_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/sharp_city_24"
                    android:drawablePadding="8dp"
                    android:hint="City"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/addClinic_province"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/sharp_city_24"
                    android:drawablePadding="8dp"
                    android:hint="Province"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/addClinic_postalCode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress"
                    android:hint="Postal Code"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/addClinic_contactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/sharp_contact_24"
                    android:drawablePadding="8dp"
                    android:hint="Contact Number"
                    android:padding="8dp"
                    android:textColor="@color/black" />


                <Button
                    android:id="@+id/btnSubmit_addClinic"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Submit"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30sp"
                    android:textSize="18sp"
                    android:backgroundTint="@color/darkteal"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>